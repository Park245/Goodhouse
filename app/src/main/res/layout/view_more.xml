<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/linechart"
            android:layout_width="406dp"
            android:layout_height="280dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="44dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/linearLayout" android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/linechart">

        <Button
            android:id="@+id/oneDayBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:text="하루"
            android:textSize="20sp"
            tools:layout_marginRight="40sp" />

        <Button
            android:id="@+id/weekBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40sp"
            android:text="일주일"
            android:textSize="20sp" />

        <Button
            android:id="@+id/amonthBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한달"
            android:textSize="20sp" />
    </LinearLayout>
    <TextView
            android:text="받은 민원내역"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:textSize="25sp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="409dp"
            android:layout_height="242dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/recyclerView"/>

</androidx.constraintlayout.widget.ConstraintLayout>