<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical" android:gravity="center" android:id="@+id/layout">
    <TextView
            android:text="굿하우스"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/titleText" android:textSize="75sp"
            android:textStyle="bold" android:gravity="center"/>
    <Button
            android:text="Login"
            android:layout_width="202dp"
            android:layout_height="wrap_content" android:id="@+id/loginBtn"/>
</LinearLayout>